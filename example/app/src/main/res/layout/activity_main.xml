<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onProcessDH"
                android:text="@string/ui_btn_genKey" />

            <TextView
                android:id="@+id/label_txt_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ui_txt_match" />

            <TextView
                android:id="@+id/label_match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_txt_client_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ui_txt_clientKey" />

            <TextView
                android:id="@+id/label_client_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_txt_server_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ui_txt_serverKey" />

            <TextView
                android:id="@+id/label_server_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>